FROM fedora:37

RUN dnf -y install ansible

RUN mkdir -p /home/user && echo "user:x:1000:1000:user:/home/user:/bin/bash" >> /etc/passwd \
 && echo "user:!!:1000::::::" >> /etc/shadow \
 && chown -R user /home/user

RUN echo 'ALL ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

USER user

RUN mkdir -p /home/user/.ansible/roles/ansible-linuxbrew

COPY . /home/user/.ansible/roles/ansible-linuxbrew
